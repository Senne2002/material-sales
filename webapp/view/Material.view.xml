<mvc:View
    controllerName="ap.materialsales.controller.Material"
    xmlns="sap.m"
    xmlns:f="sap.f"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:fb="sap.ui.comp.filterbar"
    xmlns:core="sap.ui.core"
    displayBlock="true"
>
    <f:DynamicPage id="page">
        <f:header>
            <f:DynamicPageHeader>
                <f:content>
                    <fb:FilterBar
                        id="filterbar"
                        persistencyKey="myPersKey"
                        useToolbar="false"
                        search=".handleFilterGo"
                    >
                        <fb:filterGroupItems>
                            <fb:FilterGroupItem
                                name="Search"
                                groupName="Group1"
                                visibleInFilterBar="true"
                            >
                                <fb:control>
                                    <SearchField
                                        width="100%"
                                        showSearchButton="false"
                                    />
                                </fb:control>
                            </fb:FilterGroupItem>
                        </fb:filterGroupItems>
                    </fb:FilterBar>
                </f:content>
            </f:DynamicPageHeader>
        </f:header>
        <f:content>
            <Button
                icon="sap-icon://activities"
                type="Transparent"
                press="onNavToSales"
                text="Nav to Sales"
            />
            <Table
                id="materialTable"
                items="{/MaterialSet}"
                headerText="Materials"
            >
                <headerToolbar>
                    <OverflowToolbar>
                        <Title
                            text="Materials"
                            level="H2"
                        />
                        <ToolbarSpacer />
                        <Button
                            tooltip="Filter"
                            icon="sap-icon://filter"
                            press="handleFilterButtonPressed"
                        />
                        <Button
                            icon="sap-icon://excel-attachment"
                            press="onExport"
                        />
                    </OverflowToolbar>
                </headerToolbar>
                <columns>
                    <Column
                        minScreenWidth="Tablet"
                        demandPopin="true"
                        hAlign="End"
                    >
                        <VBox>
                            <Text text="Material number" />
                        </VBox>
                    </Column>
                    <Column
                        minScreenWidth="Tablet"
                        demandPopin="true"
                        hAlign="End"
                    >
                        <VBox>
                            <Text text="Description" />
                        </VBox>
                    </Column>
                    <Column
                        minScreenWidth="Tablet"
                        demandPopin="true"
                        hAlign="End"
                    >
                        <VBox>
                            <Text text="Group" />
                        </VBox>
                    </Column>
                    <Column
                        minScreenWidth="Tablet"
                        demandPopin="true"
                        hAlign="End"
                    >
                        <VBox>
                            <Text text="Type" />
                        </VBox>
                    </Column>
                    <Column
                        minScreenWidth="Tablet"
                        demandPopin="true"
                        hAlign="End"
                    >
                        <VBox>
                            <Text text="Industry" />
                        </VBox>
                    </Column>
                    <Column
                        minScreenWidth="Tablet"
                        demandPopin="true"
                        hAlign="End"
                    >
                        <VBox>
                            <Text text="Base UoM" />
                        </VBox>
                    </Column>
                    <Column
                        minScreenWidth="Tablet"
                        demandPopin="true"
                        hAlign="End"
                    >
                        <VBox>
                            <Text text="Purchase UoM" />
                        </VBox>
                    </Column>
                </columns>
                <items>
                    <ColumnListItem
                        type="Navigation"
                        vAlign="Middle"
                        press=".onListItemPress"
                    >
                        <cells>
                            <ObjectIdentifier title="{Matnr}" />
                            <Text text="{Maktx}" />
                            <Text text="{Matkl}" />
                            <Text text="{Mtart}" />
                            <Text text="{Mbrsh}" />
                            <Text text="{Meins}" />
                            <Text text="{Bstme}" />
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </f:content>
    </f:DynamicPage>
</mvc:View>
