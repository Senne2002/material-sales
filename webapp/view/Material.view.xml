<mvc:View
    controllerName="ap.materialsales.controller.Material"
    xmlns="sap.m"
    xmlns:f="sap.f"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
>
    <Page
        id="page"
        title="Material"
    >
        <content>
            <Table
                id="materialTable"
                items="{/MaterialSet}"
                headerText="Materials"
            >
                <headerToolbar>
                    <OverflowToolbar>
                        <Title
                            text="Materials"
                            level="H2"
                        />
                        <ToolbarSpacer />
                        <Button
                            tooltip="Filter"
                            icon="sap-icon://filter"
                            press="handleFilterButtonPressed"
                        />
                    </OverflowToolbar>
                </headerToolbar>
                <columns>
                    <Column width="12em">
                        <VBox>
                            <Text text="Material number" />
                        </VBox>
                    </Column>
                    <Column width="12em">
                        <VBox>
                            <Text text="Description" />
                        </VBox>
                    </Column>
                    <Column width="12em">
                        <VBox>
                            <Text text="Group" />
                        </VBox>
                    </Column>
                    <Column width="12em">
                        <VBox>
                            <Text text="Type" />
                        </VBox>
                    </Column>
                    <Column width="12em">
                        <VBox>
                            <Text text="Industry" />
                        </VBox>
                    </Column>
                    <Column width="12em">
                        <VBox>
                            <Text text="Base UoM" />
                        </VBox>
                    </Column>
                    <Column width="12em">
                        <VBox>
                            <Text text="Purchase UoM" />
                        </VBox>
                    </Column>
                </columns>
                <items>
                    <ColumnListItem
                        type="Navigation"
                        vAlign="Middle"
                        press=".onListItemPress"
                    >
                        <cells>
                            <ObjectIdentifier title="{Matnr}" />
                            <Text text="{Maktx}" />
                            <Text text="{Matkl}" />
                            <Text text="{Mtart}" />
                            <Text text="{Mbrsh}" />
                            <Text text="{Meins}" />
                            <Text text="{Bstme}" />
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </content>
    </Page>
</mvc:View>
